{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" /*, "Serilog.Sinks.File"*/ ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Routing": "Information",
        //"System": "Information",
        "System.Net.Http.HttpClient": "Information",
        "System.Diagnostics":  "Information"
      }
    },
    "Properties": {
      "app": "API"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {SourceContext:l}: {Level:u3}] [{MachineName} {Application}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      } /*,
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 1000000000,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "flushToDiskInterval": "00:00:01",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {SourceContext:l}: {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }*/
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithSpan" ]
  },
  "AllowedHosts": "*",
  "AcquiringBankConfiguration": {
    "BaseAddress": "https://localhost:34765",
    "Endpoint": "payments"
  },
  "HttpClientPolicySettings": {
    "RetryCount": 3,
    "RetryCountBeforeBreaking": 4,
    "DurationOfBreakInSeconds": 15,
    "RequestTimeoutInSeconds": 30
  },
  "RedisConnection": "localhost:6379,abortConnect=false",
  "ApplicationMetrics": {
    "FlushIntervalInSeconds": 10,
    "DataStore": {
      "Address": "http://localhost:8086",
      "Database": "metricsdatabase",
      "UserName": "paymentgetway",
      "Password": "paymentgetway",
      "Consistenency": "any",
      "RetentionPolicy": "autogen",
      "CreateDataBaseIfNotExists": true
    },
    "HttpPolicy": {
      "BackoffPeriodInSeconds": 30,
      "FailuresBeforeBackoff": 5,
      "TimeoutInSeconds": 10
    },
    "Tracking": {
      "ApdexTSeconds": 0.008,
      "IgnoredHttpStatusCodes": [ 401, 404 ]
    }
  }
}
